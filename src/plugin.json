{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Checkmk",
  "id": "tribe-29-checkmk-datasource",
  "metrics": true,
  "info": {
    "description": "Checkmk data source",
    "author": {
      "name": "Checkmk GmbH",
      "url": "https://github.com/Checkmk/"
    },
    "keywords": ["checkmk"],
    "logos": {
      "small": "img/checkmk_logo.svg",
      "large": "img/checkmk_logo.svg"
    },
    "links": [
      { "name": "GitHub", "url": "https://github.com/Checkmk/grafana-checkmk-datasource" },
      { "name": "Checkmk", "url": "https://Checkmk.com" }
    ],
    "screenshots": [
      {
        "name": "Checkmk metrics shown in Grafana",
        "path": "img/screenshot.png"
      }
    ],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=8.0.0",
    "plugins": []
  },
  "routes": [
    {
      "path": "rest",
      "url": "{{ .JsonData.url }}",
      "headers": [
        {
          "name": "Authorization",
          "content": "Bearer {{ .JsonData.username }} {{ .SecureJsonData.secret }}"
        }
      ]
    },
    {
      "path": "cmk",
      "url": "{{ .JsonData.url }}",
      "urlParams": [
        {
          "name": "_username",
          "content": "{{ .JsonData.username }}"
        },
        {
          "name": "_secret",
          "content": "{{ .SecureJsonData.secret }}"
        },
        {
          "name": "output_format",
          "content": "json"
        }
      ]
    }
  ]
}
