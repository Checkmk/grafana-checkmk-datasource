{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "grafana-checkmk-datasource",
  "id": "tribe-29-grafana-checkmk-datasource",
  "metrics": true,
  "info": {
    "description": "Checkmk Datasource",
    "author": {
      "name": "Tribe29 GmbH",
      "url": "https://github.com/tribe29/"
    },
    "keywords": ["checkmk"],
    "logos": {
      "small": "img/checkmk_logo.png",
      "large": "img/checkmk_logo.png"
    },
    "links": [{ "name": "GitHub", "url": "https://github.com/tribe29/grafana-checkmk-datasource" },
              { "name": "checkmk", "url": "https://checkmk.com" }],
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=7.0.0",
    "plugins": []
  },
  "routes": [
    {
      "path": "cmk",
      "url": "{{ .JsonData.url }}",
      "urlParams": [
        {
          "name": "_username",
          "content": "{{ .JsonData.username }}"
        },
        {
          "name": "_secret",
          "content": "{{ .SecureJsonData.secret }}"
        },
        {
          "name": "output_format",
          "content": "json"
        }
      ]
    }
  ]
}
